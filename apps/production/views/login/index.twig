{{ set(this, 'title', 'Gossip 24/7 Staging - Login') }}
{{ this.registerCssFile('/css/sb-admin-2.css') }}
{{ this.registerJsFile('/js/jquery.min.js') }}
<style>
    .btn-success {
        background-color: #5cb85c;
    }
</style>
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Please Sign In</h3>
            </div>
            <div class="panel-body">
                {% set form = active_form_begin({
                    'id' : 'login-form',
                    'action' : ['site/login'],
                    'method' : 'POST'
                }) %}
                    <fieldset>
                        <div class="form-group">
                            {{ form.field(model, 'username').input('text', {'placeholder' : 'Username', 'class' : 'form-control'}).label(false) | raw }}
                        </div>
                        <div class="form-group">
                            {{ form.field(model, 'password').input('password', {'placeholder' : 'Password', 'class' : 'form-control'}).label(false) | raw }}
                        </div>
                        <div class="checkbox">
                            {{ form.field(model, 'rememberMe').checkbox([],true).label('Remember Me') | raw }}
                        </div>
                        <input type="submit" class="btn btn-lg btn-success btn-block" value="Login" />
                    </fieldset>
                {{ active_form_end() }}
            </div>
        </div>
    </div>
</div>