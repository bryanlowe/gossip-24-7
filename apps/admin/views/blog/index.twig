{{ set(this, 'title', 'Gossip 24/7 Admin - New Story Entry') }}
{{ this.registerJsFile('/js/jquery.min.js') }}
{{ this.registerJsFile('/js/page-scripts/blog-scripts.js') }}
<div class="row">
	<div class="col-lg-12">
		<div class="panel panel-primary">
			<div class="panel-heading">
				<h3 class="panel-title">Create New Story</h3>
			</div>
			<div class="panel-body">
				<div class="row">
					<div class="col-lg-4">
						<label for="title">Title</label><br />
						<input class="form-control" name="title" placeholder="Enter your title here" />
					</div>
					<div class="col-lg-4">
						<label for="story_type">Story Size</label><br />
						<select class="form-control" name="story_size">
							<option value="1">Main Story</option>
							<option value="2">Featured Story - Horizontal</option>
							<option value="3">Featured Story - Vertical</option>
							<option value="4">Side Story</option>
							<option value="5">Advertisement</option>
						</select>
					</div>
					<div class="col-lg-4">
						<label for="link">Link</label><br />
						<input class="form-control" name="link" value="" placeholder="Enter your link here" />
					</div>
				</div>
				<div class="clear"><br /></div>
				<div class="row">
					<div class="col-lg-12">
						<label for="description">Description</label><br />
						<textarea class="form-control" name="description" placeholder="Enter your story here"></textarea>
					</div>
					<div class="clear"><br /></div>
					<div class="pull-right" style="margin-right: 20px;">
						<input type="button" name="saveBtn" class="btn btn-info" value="SAVE STORY" />
					</div>
				</div>
			</div>
		</div>
	</div>
</div>