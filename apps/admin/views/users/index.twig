{{ set(this, 'title', 'Gossip 24/7 Admin - Manage Users') }}
{{ this.registerJsFile('/js/jquery.min.js') }}
{{ this.registerJsFile('/js/page-scripts/user-scripts.js') }}
<div class="row">
	<div class="col-lg-12">
		<div class="panel panel-primary">
			<div class="panel-heading">
				<h3 class="panel-title">Create/Edit Users</h3>
			</div>
			<div class="panel-body">
				<div class="row">
					<div class="col-lg-4">
						<label for="user_select">Edit Users</label><br />
						<select class="form-control" name="user_select">
							<option value="0">Select a User to Edit</option>
							{% for user in users %}
								<option value="{{ user.user_id }}">{{ user.first_name ~ ' ' ~ user.last_name }}</option>
							{% endfor %}
						</select>
					</div>
					<div class="col-lg-4">
						<div class="pull-right" style="margin-right: 20px;">
							<input type="button" name="newBtn" class="btn btn-info" value="CREATE NEW USER" />
						</div>
						<div class="pull-right" style="margin-right: 20px;">
							<input type="button" name="loadBtn" class="btn btn-info" value="LOAD USER" />
						</div>
					</div>
				</div>
				<div class="clear"><br /></div>
				<div class="row">
					<input type="hidden" name="user_id" />
					<div class="col-lg-4">
						<label for="first_name">First Name</label><br />
						<input class="form-control" name="first_name" placeholder="Enter First Name" />
					</div>
					<div class="col-lg-4">
						<label for="last_name">Last Name</label><br />
						<input class="form-control" name="last_name" placeholder="Enter Last Name" />
					</div>
					<div class="col-lg-4">
						<label for="email">Email</label><br />
						<input class="form-control" type="email" name="email" placeholder="Enter Email" />
					</div>
				</div>
				<div class="clear"><br /></div>
				<div class="row">
					<div class="col-lg-4">
						<label for="username">Username</label><br />
						<input class="form-control" name="username" placeholder="Enter Username" />
					</div>
					<div class="col-lg-4">
						<label for="password">Password</label><br />
						<input class="form-control" name="password" type="password" placeholder="Enter Password" />
					</div>
					<div class="col-lg-4">
						<label for="active_status">Update User Status?</label><br />
						<label class="radio-inline">
                            <input type="radio" value="1" name="active_status"> Active
                        </label>
                        <label class="radio-inline">
                            <input type="radio" value="0" name="active_status"> Inactive
                        </label>
					</div>
					<div class="clear"><br /></div>
					<div class="pull-right" style="margin-right: 20px;">
						<input type="button" name="saveBtn" class="btn btn-info" value="SAVE USER" />
					</div>
				</div>
			</div>
		</div>
	</div>
</div>