{% if story_list %}
	<div class="panel-group" id="accordion" aria-multiselectable="true" role="tablist">
		{% for entry in story_list %}
			<div data-story="{{entry.story_id}}" class="panel {{ entry.story_type == "SPOTLIGHT" ? "panel-green" : "panel-default" }}">
		        <div id="heading-{{loop.index}}" role="tab" class="panel-heading">
		          	<div class="col-lg-6">
		          		<h4 class="panel-title">
			            	<a aria-controls="collapse-{{entry.story_id}}" aria-expanded="false" href="#collapse-{{entry.story_id}}" data-parent="#accordion" data-toggle="collapse" role="button">
			            		<label for="title">Title:</label> {{ entry.title|length > 50 ? entry.title|slice(0, 50) ~ '...' : entry.title  }}
			            	</a>
			            </h4>
			        </div>
			        <div class="col-lg-3 story_date">
						<label for="date">Date:</label> {{ entry.story_date != "" ? entry.story_date : "N/A" }}
					</div>
					<div class="col-lg-2">
						<label for="priority">Priority:</label> <input type="number" data-story="{{entry.story_id}}" data-storypid="{{entry.storyPriority.story_priority_id}}" value="{{entry.storyPriority.priority}}" min="0" max="30" class="form-control" name="priority" placeholder="Enter Priority" />
					</div>
					<div class="col-lg-1">
		            	<button data-story="{{entry.story_id}}" data-visible="{{entry.visible}}">
		            		{{ entry.visible ? '<i class="fa fa-eye fa-fw"></i>' : '<i class="fa fa-eye-slash fa-fw"></i>' }}		
						</button>
					</div>
		        </div>
		        <div aria-labelledby="heading-{{entry.story_id}}" role="tabpanel" class="panel-collapse collapse" id="collapse-{{entry.story_id}}">
		          	<div class="panel-body">
		            	<div class="row">
							<div class="col-lg-4">
								<label for="title">Title</label><br />
								<input class="form-control" name="title" value="{{entry.title}}" placeholder="Enter your title here" />
							</div>
							<div class="col-lg-4">
								<label for="story_type">Story Type</label><br />
								<select class="form-control" name="story_type">
									<option value="FEATURED" {{ entry.story_type == "FEATURED" ? "selected" : "" }}>Featured Story</option>
									<option value="SPOTLIGHT" {{ entry.story_type == "SPOTLIGHT" ? "selected" : "" }}>Main Story</option>
									<option value="SIDE" {{ entry.story_type == "SIDE" ? "selected" : "" }}>Side Story</option>
								</select>
							</div>
							<div class="col-lg-4">
								<label for="link">Link</label><br />
								<input class="form-control" name="link" value="{{ entry.link }}" placeholder="Enter your link here" />
							</div>
						</div>
						<div class="clear"><br /></div>
						<div class="row">
							<div class="col-lg-12">
								<label for="description">Description</label><br />
								<textarea class="form-control" name="description" placeholder="Enter your story here">{{entry.description}}</textarea>
							</div>
							<div class="clear"><br /></div>
							<div class="pull-right" style="margin-right: 20px;">
								<input type="button" data-story="{{entry.story_id}}" name="deleteBtn" class="btn btn-danger" value="DELETE STORY" />
							</div>
							<div class="pull-right" style="margin-right: 20px;">
								<input type="button" data-story="{{entry.story_id}}" name="saveBtn" class="btn btn-info" value="SAVE STORY" />
							</div>
						</div>
		          	</div>
		        </div>
		    </div>
		{% endfor %}
	</div>	
{% else %}
	<p align="center"><strong>Move along! Nothing to see here!</strong></p>
{% endif %}