    <title>{{ html.encode(this.title) }}</title>
    {{ this.head() }}
</head>
<body>
{{ this.beginBody() }}
    <nav style="margin-bottom: 0" role="navigation" class="navbar navbar-default navbar-static-top">
        <div class="navbar-header">
            <a href="/" class="navbar-brand">Gossip 24/7 Admin</a>
        </div>
        <!-- /.navbar-header -->

        <div role="navigation" class="navbar-default sidebar">
            <div class="sidebar-nav navbar-collapse">
                <ul id="side-menu" class="nav in">
                    <li>
                        <a href="/rss" class="active"><i class="fa fa-rss fa-fw"></i> RSS Feeds</a>
                    </li>
                    <li>
                        <a href="/blog" class="active"><i class="fa fa-pencil-square-o fa-fw"></i> Create New Story</a>
