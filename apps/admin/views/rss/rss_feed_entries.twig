{% if rss_feed %}
	{% for entry in rss_feed %}
		<div class="col-lg-12" data-story="{{loop.index}}">
			<div class="col-lg-3">
				<div>
					<label for="title">Title</label><br />
					<input class="form-control" name="title" value="{{entry.title}}" placeholder="Enter your title here" />
				</div>
				<div class="clear"><br /></div>
				<div>
					<label for="link">Link</label><br />
					<input class="form-control" name="link" value="{{entry.link}}" readonly />
				</div>
				<div class="clear"><br /></div>
				<div>
					<label for="story_type">Story Size</label><br />
					<select class="form-control" name="story_size">
						<option value="1">Main Story</option>
						<option value="2">Featured Story - Horizontal</option>
						<option value="3">Featured Story - Vertical</option>
						<option value="4">Side Story</option>
					</select>
				</div>
			</div>
			<div class="col-lg-9">
				<label for="description">Description</label><br />
				<textarea class="form-control" name="description" placeholder="Enter your story here">{{entry.description|striptags|trim}}</textarea>
			</div>
			<div class="clear"><br /></div>
			<div class="pull-right" style="margin-right: 20px;">
				<input type="button" class="btn btn-info" value="SAVE STORY" data-story="{{loop.index}}" />
			</div>
		</div>
		<div class="clear"><br /><hr></div>
	{% endfor %}
	<script>
