		$('input[data-story][type="button"]').click(function(){
            var story_num = $(this).data('story');
            saveFeed(story_num);
        });
	//-->
	</script>
{% else %}
	<p align="center"><strong>Move along! Nothing to see here!</strong></p>
{% endif %}