<div class="row">
	<div class="col-lg-3">
		<div class="panel panel-primary">
			<div class="panel-heading">
				<h3 class="panel-title">Celebrity Tag List</h3>
			</div>
			<div class="panel-body">
				<div class="list-group">
					{% include "tag_list.twig" %}
				</div>
			</div>
		</div>
	</div>
	<div class="col-lg-9">
		<div class="panel panel-primary">
			<div class="panel-heading">
				<h3 class="panel-title">Edit Celebrity Tag</h3>
			</div>
			<div class="panel-body">
				<div class="row">
					<input name="edit_story_tag_id" type="hidden" />
					<div class="col-lg-6">
						<label for="edit_tag_name">Tag Name</label><br />
						<input class="form-control" name="edit_tag_name" placeholder="Enter tag name here" />
					</div>
					<div class="col-lg-6">
						<label for="edit_source_link">Source Link (Optional)</label><br />
						<input class="form-control" name="edit_source_link" placeholder="Enter a source link to this tag" />
					</div>
				</div>
				<div class="clear"><br /></div>
				<div class="row">
					<div class="col-lg-12">
						<label for="edit_description">Description</label><br />
						<textarea class="form-control" name="edit_description" placeholder="Enter tag description"></textarea>
					</div>
					<div class="clear"><br /></div>
					<div class="pull-right" style="margin-right: 20px;">
						<input type="button" name="deleteBtn" class="btn btn-danger" value="DELETE TAG" />
					</div>
					<div class="pull-right" style="margin-right: 20px;">
						<input type="button" name="editBtn" class="btn btn-info" value="EDIT TAG" />
					</div>
				</div>
			</div>
		</div>
	</div>
</div>