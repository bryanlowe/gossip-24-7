<div class="row">
	<div class="col-lg-12">
		<div class="panel panel-primary">
			<div class="panel-heading">
				<h3 class="panel-title">Create Celebrity Tag</h3>
			</div>
			<div class="panel-body">
				<div class="row">
					<div class="col-lg-6">
						<label for="tag_name">Tag Name</label><br />
						<input class="form-control" name="tag_name" placeholder="Enter tag name here" />
					</div>
					<div class="col-lg-6">
						<label for="source_link">Source Link (Optional)</label><br />
						<input class="form-control" name="source_link" placeholder="Enter a source link to this tag" />
					</div>
				</div>
				<div class="clear"><br /></div>
				<div class="row">
					<div class="col-lg-12">
						<label for="description">Description</label><br />
						<textarea class="form-control" name="description" placeholder="Enter tag description"></textarea>
					</div>
					<div class="clear"><br /></div>
					<div class="pull-right" style="margin-right: 20px;">
						<input type="button" name="saveBtn" class="btn btn-info" value="SAVE TAG" />
					</div>
				</div>
			</div>
		</div>
	</div>
</div>