{{ use('app/assets/AppAsset')}}
{{ register_app_asset() }}
{{ this.beginPage() }}
<!DOCTYPE html>
<html lang="{{app.language}}">
<head>
    <meta charset="{{app.charset}}">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {{ html.csrfMetaTags() | raw }}
    <title>{{ html.encode(this.title) }}</title>
    {{ this.head() }}
</head>
<style>
	body {
		background: #fff;
	}
</style>
<body>
{{ this.beginBody() }}

    <div id="mainContainer" class="container" style="max-width: 960px; padding: 0;">
        {{ content | raw }}
    </div>

{{ this.endBody() }}
</body>
</html>
{{ this.endPage() }}
