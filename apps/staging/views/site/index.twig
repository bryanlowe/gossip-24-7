				</div>
				<div class="hide">
					{% for tag in main_story.tags %}
						<div id="tag-id-{{ tag.story_tag_id }}">{{ tag.description }}</div> 
					{% endfor %}
				</div>
			{% endif %}
			{% if main_story.audio|length > 0 %}
				{% for audio in main_story.audio %}
					<div class="block">
						<span style="color: #000;"><i class="fa fa-volume-up fa-fw" style="color: #cf0000;"></i> <a data-audiocontainer="#audio-id-{{ audio.story_audio_id }}">Listen</a></span>
