{{ set(this, 'title', 'Gossip 24/7') }}
<style type="text/css">
body {
	background: #fff;
}
h3, h4 {
	color: #203eda;
	font-weight: bold;
	padding-top: 10px;
	padding-bottom: 10px;
}
h3 a.title:link, h3 a.title:visited, h4 a.title:link, h4 a.title:visited {
	color: #203eda;
}
h3 a.title:hover, h4 a.title:hover {
	color: #dd0000;
}
#site-header {
	padding-top: 10px;
	padding-bottom: 10px;
	border-top: 1px solid #e4e4e4;
	border-bottom: 1px solid #e4e4e4;
}
.world-news-grid {
	width: 47%;
}
.world-news-grid a {
	text-transform: none;
}
.world-news-grid img {
	float: left;
	padding-right: 5px;
	padding-bottom: 5px;
}
.world-news-grid-midsize img {
	float: left;
	padding: 5px;
}
.videos {
	padding: 0.8em 1em 0.5em;
}
.posts { 
	padding: 0;
}
.breaking-news-title {
	width: 100%;
}
.conference-slider img {
	margin: auto;
}
</style>
{% set story_type = {'MAIN': 1,'FEATURED_HORIZONTAL': 2,'FEATURED_VERTICAL': 3,'SIDE': 4,'ADVERTISEMENT': 5} %}
<div class="news-paper">
	<div id="site-header" class="header">
		<div class="header-left">
			<a href="/">
				<h1><i>gossip</i>247.com</h1>
			</a>
		</div>
		<div class="clearfix"></div>
	</div>
	<div class="clearfix"><br /></div>
	{% if main_story %}
		{% set story = main_story %}
		<div class="main-content">		
			{% include "main_story_fragment.twig" %}
			<div class="clearfix"></div>
		</div>
	{% endif %}

	{% if story_list %}
		<div class="col-lg-12" style="padding: 0;">
			{% if story_list.featured_list|length > 0 and story_list.side_list|length > 0 %}
				<div class="col-md-8" style="padding-left: 0; padding-right: 0;">
					<div class="world-news">
						{% for stories in story_list.featured_list %}
							<div class="world-news-grids">
								<!-- starting horizontal list of featured stories ROW {{loop.index}} -->
								{% if stories.featured_list_h|length > 0 %}
									{% for story in stories.featured_list_h %}
										{% include "featured_horizontal_story_fragment.twig" %}
										<div class="clearfix"></div>
									{% endfor %}
								{% endif %}

								<!-- starting vertical list of featured stories ROW {{loop.index}} -->
								{% if stories.featured_list_v|length > 0 %}
									{% for story in stories.featured_list_v %}
										{% include "featured_vertical_story_fragment.twig" %}
										{% if loop.index % 2 == 0 %}
											<div class="clearfix"></div>
										{% endif %}
									{% endfor %}
								{% endif %}
							</div>
						{% endfor %}
					</div>
					<div class="clearfix"></div>
				</div>

				<div class="col-md-4" style="padding: 0; padding-left: 5px;">
					<div class="world-news-grids">
						{% for story in story_list.side_list %}
							<!-- starting side story ROW {{loop.index}} -->
							<div class="world-news-side">
								<div style="background-color: #e3e3e3; overflow:hidden; padding: 3px 0;">
									{% include "side_story_fragment.twig" %}
									<hr style="border: 1px solid #000; margin: 0;">
								</div>
							</div>
							<div class="clearfix"></div>
						{% endfor %}
						<div class="clearfix"></div>
					</div>
				</div>
			{% endif %}

			{% if story_list.featured_list|length > 0 and story_list.side_list|length == 0 %}
				<div class="world-news">
					{% for stories in story_list.featured_list %}
						<div class="world-news-grids">
							<!-- starting horizontal list of featured stories ROW {{loop.index}} -->
							{% if stories.featured_list_h|length > 0 %}
								{% for story in stories.featured_list_h %}
									{% include "featured_horizontal_story_fragment.twig" %}
									<div class="clearfix"></div>
								{% endfor %}
							{% endif %}

							<!-- starting vertical list of featured stories ROW {{loop.index}} -->
							{% if stories.featured_list_v|length > 0 %}
								{% for story in stories.featured_list_v %}
									{% include "featured_vertical_story_fragment.twig" %}
									{% if loop.index % 3 == 0 %}
										<div class="clearfix"></div>
									{% endif %}
								{% endfor %}
							{% endif %}
						</div>
					{% endfor %}
				</div>
				<div class="clearfix"></div>
			{% endif %}


			{% if story_list.side_list|length > 0 and story_list.featured_list|length == 0 %}
				<div class="world-news">
					<div class="world-news-grids">
						{% for story in story_list.side_list %}
							<!-- starting side story ROW {{loop.index}} -->
							<div class="world-news-grid">
								{% include "side_story_fragment.twig" %}
							</div>

							{% if loop.index % 4 == 0 %}
								<div class="clearfix"></div>
							{% endif %}
						{% endfor %}
					</div>
				</div>
				<div class="clearfix"></div>
			{% endif %}
		</div>
	{% endif %}
	<div class="text-center" style="margin-top: 25px;">
		<div class="copyright text-center">
			<p>Gossip 24/7 &copy; {{ currentYear }} All rights reserved</p>
		</div>
	</div>
</div>
