			<div class="col-lg-12 total-news">
				<h3><a href="{{ main_story.link }}" class="title" target="_blank">{{ main_story.title|raw }}</a></h3>
				<div class="clearfix"></div>
				<div class="conference-slider">
					{% for image in main_story.storyImage %}
						{% if image.order == 0 %}
							<img src="http://media.gossip247.com/story/{{ image.story_id }}/images/{{ image.image_name }}" class="img-responsive" alt="">
						{% endif %}
					{% endfor %}
					{% if main_story.show_desc %}
						<p>{{ main_story.description|raw }}</p>
					{% endif %}
				</div>
			</div>
			{% if main_story.tags|length > 0 %}	
				<div class="inline">
					{% for tag in main_story.tags %}
						<span style="color: #000;"><i class="fa fa-info-circle fa-fw" style="color: #cf0000;"></i> <a data-featherlight="#tag-id-{{ tag.story_tag_id }}">{{ tag.tag_name }}</a></span>
